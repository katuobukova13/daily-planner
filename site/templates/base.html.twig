<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-1 d-flex justify-content-between px-4 shadow" style="height: 60px;">
        <a class="navbar-brand" href="{{ path('home') }}">
            <p class="pl-2 d-inline font-weight-bold text-primary">Daily-planner</p>
        </a>

        {% if app.user %}
            <div class="d-flex">
                <a class="btn btn-primary" href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% else %}
            <div class="d-flex">
                <a class="btn btn-primary" href="{{ path('app_login') }}">Login</a>
            </div>
        {% endif %}
    </nav>

    {% block body %}{% endblock %}
    </body>
</html>
